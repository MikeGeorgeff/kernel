{
  "name": "georgeff/kernel",
  "description": "A lightweight application kernel with service container bootstrapping and lifecycle events",
  "type": "library",
  "authors": [
    {
      "name": "Mike Georgeff",
      "email": "mike@georgeff.co",
      "role": "Author"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "georgeff/container": "^1.0",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0",
    "squizlabs/php_codesniffer": "^3.11"
  },
  "autoload": {
    "psr-4": {
      "Georgeff\\Kernel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Georgeff\\Kernel\\Test\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit"
    ],
    "analyze": [
      "vendor/bin/phpstan"
    ],
    "phpcs": [
      "vendor/bin/phpcs"
    ]
  }
}
